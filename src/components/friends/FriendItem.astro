---
const { name, status } = Astro.props;
---

<div class="friend-item">
  <div class="friend-info">
    <span class="friend-name"><strong>{name}</strong></span>
    <span class="friend-status">{status}</span>
  </div>
  <button class="remove-btn">
    <img src="/images/amigos/eliminar_amigos.png" alt="Eliminar" />
  </button>
</div>

<style>
.friend-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: #888;
  padding: 12px;
  border-radius: 5px;
  margin-bottom: 8px;
}

/* 游댳 Informaci칩n del amigo en fila */
.friend-info {
  display: flex;
  flex-direction: row; /* Hace que el nombre y la conexi칩n est칠n en una sola l칤nea */
  align-items: center;
  gap: 15px; /* Espacio entre el nombre y la 칰ltima conexi칩n */
}

.friend-name {
  font-size: 18px;
}

/* 游댳 칔ltima conexi칩n alineada a la derecha */
.friend-status {
  color: #ddd;
  font-size: 14px;
  white-space: nowrap; /* Evita que el texto se divida en varias l칤neas */
}

/* 游댳 BOT칍N DE ELIMINAR CON C칈RCULO ROJO */
.remove-btn {
  background: none;
  border: 2px solid red; /* Borde rojo */
  border-radius: 50%; /* Hace el bot칩n circular */
  padding: 8px; /* Espacio alrededor del 칤cono */
  display: flex;
  justify-content: center;
  align-items: center;
  cursor: pointer;
  transition: background 0.3s ease, transform 0.2s ease;
}

/* Ajustar tama침o del icono */
.remove-btn img {
  width: 20px;
}

/* 游댳 Efecto hover */
.remove-btn:hover {
  background: rgba(255, 0, 0, 0.2); /* Fondo rojo suave al pasar el mouse */
  transform: scale(1.1); /* Efecto de agrandamiento */
}

/* 游댳 Ajustes para pantallas m치s peque침as */
@media (max-width: 768px) {
  .friend-item {
    flex-direction: row;
    align-items: center;
  }

  .remove-btn {
    padding: 6px;
  }

  .remove-btn img {
    width: 18px;
  }
}
</style>
